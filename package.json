        "jest": "^24.9.0",
        "pre-commit": "^1.2.2",
        "prettier": "2.0.1",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.5",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9"
    },
    "dependencies": {
        "@babel/polyfill": "^7.6.0",
        "@babel/preset-env": "^7.6.2",
        "@babel/register": "^7.6.2",
        "@types/express": "^4.17.1",
        "@types/node": "^12.7.11",
        "@types/react-redux": "^7.1.7",
        "chalk": "^2.4.2",
        "deep-freeze": "0.0.1",
        "express": "^4.17.1",
        "gl-matrix": "^3.2.1",
        "lodash": "^4.17.15",
        "nodemon": "^1.19.3",
        "npm-watch": "^0.6.0",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-redux": "^7.2.0",
        "redux": "^4.0.5",
        "rxjs": "^6.5.4"
    },
    "scripts": {
        "clean": "rm -rf ./site/build/",
        "build": "tsc -w",
        "pack": "npx webpack --config webpack.config.js site/build/client/ -o site/public/static/js/main.js",
        "server": "nodemon site/build/server/Run.js",
        "watch": "npm-watch",
        "full-rebuild": "npm run-script clean && npm run-script build && npm run-script pack && npm run-script server",
        "test-unit": "npx jest site/src/test/unit/",
        "test-profile": "npx jest site/src/test/profile/ -u",
        "test": "npm run-script test-unit",
        "lint": "npx prettier --write site/src && tslint --fix -c tslint.json 'site/src/**/*.ts' && git add ."
    },
    "pre-commit": [
        "lint",
        "test"
    ],
    "watch": {
        "full-rebuild": {
            "patterns": [
                "site/src"
            ],
            "extensions": "ts,tsx",
            "quiet": true,
            "inherit": true
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cimacmillan/jsgame.git"
