{
    "compilerOptions": {
        "outDir": "site/build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "alwaysStrict": true
    },
    "include": [
        "site/src/client/**/*",
        "site/src/server/**/*"
    ],
    "exclude": [
        "site/**/*.test.ts",
        "site/**/*.test.tsx"
    ]
}